<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="232dp"
    android:layout_height="232dp"
    android:minWidth="232dp"
    android:background="@drawable/round_non"
    android:backgroundTint="@color/white"
    android:orientation="vertical">


    <TextView
        android:id="@+id/confirmTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:fontFamily="@font/roboto_bold"
        android:gravity="center"
        android:textColor="@color/TitleColor"
        android:textSize="20sp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp"
        tools:text="회원가입 완료." />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="21dp"
        android:gravity="center"
        android:text="환영합니다 :)\n닉네임을 등록해보세요."
        android:textColor="#A1A1A1"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/yesButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/confirmTextView"
        app:layout_constraintVertical_bias="1.0"></TextView>

    <Button
        android:id="@+id/yesButton"
        android:layout_width="0dp"
        android:layout_height="47dp"
        android:layout_marginHorizontal="19dp"
        android:layout_marginBottom="19dp"
        android:background="@drawable/round_button"
        android:fontFamily="@font/roboto_bold"
        android:text="확인"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_bias="1" />

</androidx.constraintlayout.widget.ConstraintLayout>
</layout>