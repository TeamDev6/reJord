<?xml version="1.0" encoding="utf-8"?>
<layout>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/round_button"
    android:layout_width="358dp"
    android:layout_height="200dp">


    <ImageView
        android:id="@+id/bannerImage"
        android:alpha="0.2"
        android:layout_gravity="right|bottom"
        android:src="@drawable/ic_baseline_close_24"
        android:layout_width="200dp"
        android:layout_height="150dp">
    </ImageView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/bannerBackground"
        android:layout_width="358dp"
        android:layout_height="200dp">

        <TextView
            android:id="@+id/topText"
            android:textSize="12sp"
            android:includeFontPadding="false"
            android:fontFamily="@font/notosanskr_bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="25dp"
            android:text="TODAY CHALLENGE"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/bannerTitle"
            android:textSize="22sp"
            android:includeFontPadding="false"
            android:fontFamily="@font/notosanskr_bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:text="찬 물로 세탁하기"
            app:layout_constraintStart_toStartOf="@+id/topText"
            app:layout_constraintTop_toBottomOf="@+id/topText" />

        <TextView
            android:id="@+id/bannerContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/notosanskr_light"
            android:includeFontPadding="false"
            android:text="오늘의 탄소발자국 줄이기에 동참해볼까요?\n
챌린지를 확인하고 인증해보세요 :)"
            android:textSize="13sp"
            app:layout_constraintStart_toStartOf="@+id/bannerTitle"
            app:layout_constraintTop_toBottomOf="@+id/bannerTitle" />

        <TextView
            android:id="@+id/bannerButton"
            android:layout_width="90dp"
            android:layout_height="36dp"
            android:layout_marginTop="19dp"
            android:textSize="14sp"
            android:gravity="center"
            android:includeFontPadding="false"
            android:fontFamily="@font/notosanskr_bold"
            android:background="@drawable/round_button_25"
            android:backgroundTint="@color/white"
            android:paddingHorizontal="16dp"
            android:paddingVertical="8dp"
            android:text="함께하기"
            app:layout_constraintStart_toStartOf="@+id/bannerContent"
            app:layout_constraintTop_toBottomOf="@+id/bannerContent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>
</layout>